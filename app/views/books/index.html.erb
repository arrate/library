<div id='list-books'>
<h1>Books!</h1>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Genre</th>
    <th>Author</th>
    <th>Plot</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.genre %></td>
    <td><%= book.author %></td>
    <td><%= book.plot %></td>
    <td><%= link_to 'Show', book, :class =>"btn btn-primary" %></td>
    <td><%= link_to 'Edit', edit_book_path(book), :class =>"btn btn-info" %></td>
    <td><%= link_to 'Destroy', book, :class =>"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Book', new_book_path %>
</div>